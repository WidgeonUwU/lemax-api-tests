					"script": {
						"exec": [
							"pm.test(\"Создание HR пользователя (без ролей)\", function () {\r",
							"    var userData = pm.response.json();\r",
							"    pm.expect(userData.full_name).to.eql(\"Тестер Тестеров\");\r",
							"    pm.expect(userData.role).to.eql(\"hr\");\r",
							"    pm.expect(userData.email).to.eql(\"tester@test.com\");\r",
							"    pm.expect(userData).to.have.property(\"created_at\");\r",
							"    pm.expect(userData).to.have.property(\"last_login\");\r",
							"    pm.expect(userData).to.have.property(\"updated_at\");\r",
							"    pm.expect(userData).to.have.property(\"uuid\");\r",
							"    pm.response.to.have.status(201);\r",
							"})"
						],
